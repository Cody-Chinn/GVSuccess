<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GV Success"
        android:textSize="18pt"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/instruct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a Success Center"
        android:textSize="14pt"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/chemB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chemistry"
        android:textSize="12pt"
        android:gravity="left"
        android:layout_marginTop="3pt"
        app:layout_constraintTop_toBottomOf="@id/instruct"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/csB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Computer Science"
        android:textSize="12pt"
        android:gravity="left"
        android:layout_marginTop="3pt"
        app:layout_constraintTop_toBottomOf="@id/chemB"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/mathB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mathematics"
        android:textSize="12pt"
        android:gravity="left"
        android:layout_marginTop="3pt"
        app:layout_constraintTop_toBottomOf="@id/csB"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/statB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:textSize="12pt"
        android:gravity="left"
        android:layout_marginTop="3pt"
        app:layout_constraintTop_toBottomOf="@id/mathB"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>